{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 950,
  "height": 520,
  "title": { "text": "Net Overseas Migration (NOM) by Country of Citizenship (Latest Year)", "anchor": "start" },
  "projection": { "type": "equalEarth" },

  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
  },

  "layer": [
    {
      "transform": [
        {
          "calculate": "'No data for ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": { "type": "geoshape", "fill": "#f3f4f6", "stroke": "#e5e7eb" },
      "encoding": { "tooltip": { "field": "note" } }
    },

    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "data/table_1_1_nom_latest_formal_v2.csv",
              "format": { "type": "csv" }
            },
            "key": "Country",
            "fields": ["NOM"]
          }
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "color": {
          "field": "NOM",
          "type": "quantitative",
          "title": "Net Overseas Migration (people)",
          "scale": { "scheme": "blues" },
          "legend": { "format": ",d" }
        },
        "tooltip": [
          { "field": "properties.NAME", "title": "Country" },
          { "field": "NOM", "title": "NOM", "format": ",d" }
        ]
      }
    }
  ],

  "config": { "view": { "stroke": null } }
}
